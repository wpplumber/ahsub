{
  "manifest_version": 2,

  "browser_action": {
    "default_popup": "www/index.html#/popup"
  },

  "icons": {
    "16": "icons/icon-16x16.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [],

  "permissions": [],

  "web_accessible_resources": [],

  "content_security_policy": "default-src 'self'"
}
